<!DOCTYPE html>
<html>
<head>
  <title>RailsAuthenticationEngine</title>
  <%= stylesheet_link_tag    "rails_authentication_engine/application", media: "all" %>
  <%= javascript_include_tag "rails_authentication_engine/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:danger] %>
    <div class='alert alert-danger'>
      <%= sanitize(flash[:danger]) %>
    </div>
  <% end %>
  <% if flash[:info] %>
    <div class='alert alert-info'>
      <%= sanitize(flash[:info]) %>
    </div>
  <% end %>
  <% if flash[:success] %>
    <div class='alert alert-success'>
      <%= sanitize(flash[:success]) %>
    </div>
  <% end %>
  <% if flash[:warning] %>
    <div class='alert alert-warning'>
    <%= sanitize(flash[:warning]) %>
  <% end %>
  <%= yield %>
</body>
</html>
